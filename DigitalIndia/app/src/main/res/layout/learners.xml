<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/background"

    >

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         style="@android:style/Theme.Translucent"
         android:orientation="vertical"
         >

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:padding="10dp"

             >

             <android.support.v7.widget.CardView

                 app:paddingStart="10dp"
                 android:padding="10dp"
                 app:paddingEnd="10dp"
                 android:layout_gravity="center"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 app:cardCornerRadius="4dp"
                 android:paddingTop="10dp"
                 android:paddingBottom="10dp"
                 app:cardElevation="2dp"
                 android:paddingEnd="10dp"
                 android:paddingStart="10dp"
                 app:cardBackgroundColor="#FFFFFF"
                 >
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="License Making"
                     android:textColor="#000000"
                     android:textSize="20sp"
                     android:textStyle="bold"
                     android:layout_gravity="center_horizontal"
                     android:id="@+id/text_about"/>
             </android.support.v7.widget.CardView>

     </LinearLayout>



<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"

    android:layout_weight="90"
    android:orientation="vertical"
    android:layout_marginTop="90dp"
    >




    <TextView
        android:id="@+id/text_learners"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/txtCredits1"
        android:layout_weight="30"
        android:textSize="25dp"
        android:textColor="#739bf9"/>
    <TextView
        android:id="@+id/text_drivers"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/txtCredits2"
        android:layout_weight="30"
        android:layout_marginTop="10dp"
        android:textSize="25dp"
        android:textColor="#739bf9"/>
    <TextView
        android:id="@+id/text_payment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/txtCredits3"
        android:textSize="25dp"
        android:layout_marginTop="10dp"
        android:layout_weight="30"
        android:textColor="#739bf9" />




 </LinearLayout>

</LinearLayout>
</LinearLayout>